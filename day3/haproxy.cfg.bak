global
        log 127.0.0.1 local2
        daemon
        maxconn 256
        log 127.0.0.1 local2 info
defaults
        log global
        mode http
        timeout connect 5000ms
        timeout client 50000ms
        timeout server 50000ms
        option  dontlognull

listen stats :8888
        stats enable
        stats uri       /admin
        stats auth      admin:1234

frontend oldboy
        bind 0.0.0.0:80
        option httplog
        option httpclose
        option  forwardfor
        log global
        acl www hdr_reg(host) -i www.oldboy.org
        use_backend www.oldboy.org if www

backend www.oldboy.org
	server 100.1.7.9 100.1.7.9 weight 20 maxconn 3000
	server 10.1.7.11 10.17.17.10:80 weight 20 maxconn 30

frontend mysql
        bind *:3306
        mode tcp
        log global
        default_backend mysqlserver

backend mysqlserver
	server mysql1 10.1.1.110:3306 weight 20 maxconn 300
	server mysql2 10.1.1.120:3306 weight 10 maxconn 200
	server mysql3 192.168.100.123:3306 weight 30 maxconn 400
